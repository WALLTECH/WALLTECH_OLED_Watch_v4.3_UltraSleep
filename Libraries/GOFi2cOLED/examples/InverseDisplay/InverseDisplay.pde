void setup()
{
  GOFoled.init(0x3D);  //initialze OLED display,default slave address is 0x3D
  GOFoled.display();   // show splashscreen
  delay(2000);
  
  GOFoled.clearDisplay();   // clear the screen and set start position to top left corner
  
  GOFoled.drawBitmap(0, 0, heart, 128, 64, WHITE);  //draw heart bitmap.
  GOFoled.display();              // show splashscreen

}

void loop()
{
  GOFoled.setInverseDisplay();          // Set Display to inverse mode  
  delay(2000);
  GOFoled.setNormalDisplay();          // Set Display to inverse mode  
  delay(2000);
    
}
